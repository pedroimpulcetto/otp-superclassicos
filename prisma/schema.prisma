generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model otp_code {
  id         String    @id @default(uuid())
  user_id    String
  user_phone String
  otp_code   String
  valid      Boolean
  expires_at DateTime
  created_at DateTime
  updated_at DateTime?
}
